modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["alsa-lib", "cargo", "dbus", "expat", "fontconfig", "freetype", "gitFull", "glib", "glibcLocales", "icu", "libGL", "libglvnd", "libiconv", "libxcrypt", "libxkbcommon", "mesa", "openssl", "pkg-config", "playwright-driver", "qt6.full", "rustc", "systemd", "wayland", "xorg.libX11", "xorg.libXcomposite", "xorg.libXcursor", "xorg.libXdamage", "xorg.libXext", "xorg.libXi", "xorg.libXrandr", "xorg.libXrender", "xorg.xcbutilcursor", "xorg.xcbutilimage", "xorg.xcbutilkeysyms", "xorg.xcbutilrenderutil", "xorg.xcbutilwm", "xorg.xorgserver", "xsimd", "xvfb-run", "zlib", "zstd"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AI Test Automation Tool"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Interface"

[[workflows.workflow]]
name = "AI Test Automation Tool"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "xvfb-run -a -s \"-screen 0 1920x1080x24\" python main.py"

[[workflows.workflow]]
name = "Web Interface"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python web_interface.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
