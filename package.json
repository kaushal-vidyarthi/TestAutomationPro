{
  "name": "ai-test-automation-pro",
  "version": "1.0.0",
  "description": "AI-Powered Test Automation Tool for Salesforce Experience Cloud - Production Ready",
  "main": "src/main/app.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "postinstall": "electron-builder install-app-deps",
    "clean": "rimraf dist build node_modules/.cache",
    "rebuild": "electron-rebuild"
  },
  "keywords": [
    "salesforce",
    "testing",
    "ai",
    "playwright",
    "electron",
    "experience-cloud",
    "automation",
    "test-generation"
  ],
  "author": "AI Testing Solutions Pro",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "jest": "^29.7.0",
    "eslint": "^8.50.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "rimraf": "^5.0.0"
  },
  "dependencies": {
    "playwright": "^1.40.0",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "uuid": "^9.0.1",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "sharp": "^0.32.6",
    "fs-extra": "^11.1.1",
    "electron-store": "^8.1.0",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "openai": "^4.20.0",
    "sqlite3": "^5.1.6",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "node-cron": "^3.0.3",
    "archiver": "^6.0.1",
    "mustache": "^4.2.0",
    "chart.js": "^4.4.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "marked": "^9.1.2",
    "highlight.js": "^11.9.0"
  },
  "build": {
    "appId": "com.aitestingsolutions.testautomationpro",
    "productName": "AI Test Automation Pro",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "templates/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!src/**/*.test.js",
      "!src/**/*.spec.js"
    ],
    "extraResources": [
      "templates/**/*",
      "assets/icons/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg",
      "icon": "assets/icons/app.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/app.ico",
      "sign": false,
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/app.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.js"],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**",
      "!src/**/*.test.js",
      "!src/**/*.spec.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "no-console": "warn",
      "semi": ["error", "always"],
      "quotes": ["error", "single"]
    }
  }
}
